# Maintainer (yuan_modu): Atila Satilmis <atila.satilmis@gmail.com>

pkgname=docker-postgresql
pkgver=r92.e904a2c
pkgrel=1
pkgdesc="Containerized postgresql"
arch=('any')
license=('custom')
url="http://www.example.com"
depends=('docker')
makedepends=('git')
source=("$pkgname::git+https://github.com/YuanModu/Dockerfile.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/$pkgname"
  echo "$(pwd)"
  install -Dm644 postgresql/docker-postgresql@.service \
    "$pkgdir/usr/lib/systemd/system/docker-postgresql@.service"
}
