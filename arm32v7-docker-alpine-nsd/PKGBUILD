# Maintainer (yuan_modu): Atila Satilmis <atila.satilmis@gmail.com>

pkgname=docker-alpine-nsd
pkgver=r70.31dfa38
pkgrel=1
pkgdesc="Containerized NSD"
arch=('armv7h')
license=('custom')
url="http://www.example.com"
depends=('docker')
makedepends=('git')
source=("$pkgname::git+https://github.com/YuanModu/Dockerfile.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/$pkgname"
  echo "$(pwd)"
  install -Dm644 arm32v7/alpine/nsd/docker-alpine-nsd@.service \
    "$pkgdir/usr/lib/systemd/system/docker-alpine-nsd@.service"
  install -Dm644 arm32v7/alpine/nsd/docker-alpine-nsd-build@.service \
    "$pkgdir/usr/lib/systemd/system/docker-alpine-nsd-build@.service"
}
